from Coding1 import Forest
from tkinter import *
tk = Tk()

tk.geometry('1000x1050')


def begining_story():
  L1 = Label(tk, text="Welcome adventurer, what is your name? Enter your Name:")
  L1.pack()
  name = Entry(tk,width=10)
  name.pack()
  def clicked1():
    res = Label(tk, text="Hello " + name.get() + ". Welcome to a world full of wonders, such as wizardry, combat, and treasure.")
    res.pack()
    basics = Label(tk, text="""To move, type “n” or “north” to go in the northern direction "s” to go in the southern direction, “e” to go east, and “w” to go west.
                                     You can also go up or down, if the situation suits those commands. 
                                     "Look" will give you a description of the area.  
                                     Type "help" to find a list of commands and actions.

You awake in a medieval tavern. The fireplace crackles in the background, and the air smells of beer and meat.
      Your head hurts badly and your vision is blurred.

                                     """)
    basics.pack()
    tavern_floor()
  btn = Button(tk, text="Save", command=clicked1)
  btn.pack()

  
def tavern_floor():
  tavern = Label(tk, text="""You stand in the tavern.
                 What would you like to do. Type help if you have no clue whats going on.""")
  tavern.pack()
  Begining = Entry(tk,width=10)
  Begining.pack()
  begining = {"north": north1, "west": west1, "east": east1, "south": south1, "look": look1, "help": help1}
  def check():
    if str(Begining.get()) in begining.keys():
      begining[str(Begining.get())]()
    else:
      tavern_floor()
  btn1 = Button(tk, text="Action", command=check)
  btn1.pack()

  
  

def help1():
  hep = Label(tk, text = """

  To move, type “north” to go in the northern direction "south” to go in the southern direction,
  “east” to go east, and “west” to go west.
  You can also go up or down, if the situation suits those commands. 
  "Look" will give you a description of the area. "Pick up" will put an object into your inventory, which has a limited capacity. 

  """)
  hep.pack()
  tavern_floor()


def look1():
  print("""

  To your west is a young girl crying in the corner 
    A door is to your east, and the is a bar to your north with a bartender behind it
  A lastly a fireplace crackles to the south.
     """)
  tavern_floor()

  
def north1():
  print("Good evening to you weary adventurer, here’s to a quiet night after a long day, eh? What’ll it be?")
  first_question = input("""Honey Mead - 1gp
  Stiffler Amber Ale - 2gp
  Bubbling Cider - 4gp
  Wine - 8gp
  Flee:
  """).lower()
  if first_question == "honey mead":
    print("You have no money sorry.")
    north1()
  elif first_question == "stiffler amber ale":
    print("You have no money sorry.")
    north1()
  elif first_question == "bubbling cider":
    print("You have no money sorry.")
    north1()
  elif first_question == "wine":
    print("You have no money sorry.")
    north1()
  elif first_question == "flee":
    tavern_floor()
  else:
    print("You dwarf, speak clearly.")
    north1()

      
def west1():
  global questcounter
  print("A young girl asks 'Are you here to help me?'")
  girl_question = input("yes/no: ").lower()
  if girl_question == "yes":
    print("Thank Dragon lord somebody is here to help! I have lost my magical box, help me find it.")
    if questcounter == 0:
      questcounter += 1
      print('Thank you for accepting my quest')
      tavern_floor()
    else:
      print("Wait you here before?")
      tavern_floor()
  elif girl_question == "no":
    tavern_floor()
  else:
    tavern_floor()

    
def east1():
  if questcounter == 1:
      print("To the east is a door, wich you walk through")
      next_story()
  else:
      print("You see a door but youre not strong enough yet please come back later.")
      tavern_floor()

      
def south1():
    print("A fireplace roars in front of you. You reach out to touch it and get burned.")
    tavern_floor()



def next_story():
    print("""You step outside

          """)
    Forest()





questcounter = 0


begining_story()


tk.mainloop()
